    <div id="credits" class="container mt-4 pt-2 mb-5">
        <!-- monday -->
        <div class="row">
            <h3 class="text-center my-3 pb-2">Monday</h3>
            
            <% courses.filter(course => course.courseDay === 'Monday').map(course => { %>
            <div class="col-md-4 mb-4">
                <div class="card bg-2 b-none shadow-lg">
                    <div class="card-body text py-5 px-3">
                        <img width="80px" height="80px" class="mb-2" src="/assets/user.png">
                        <p class="mb-1 small"><%=course.lecturerName%></p>
                        <h6><%=course.courseTitle%></h6>
                        <h6><%=course.courseCode%></h6>
                        <h6><%=course.courseTime%></h6>
                        <a href="http://localhost:5500/record/<%=course.key%>" class="btn btn-success px-4 mt-2">Time-in</a>
